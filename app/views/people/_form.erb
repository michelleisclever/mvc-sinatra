<% if !@errors.blank? %>
<div class="text-danger">
<p>
    <%= "#{@errors}" %>
</p>
    <% end %>
</div>
<!-- div class="row"> -->
<form role="form" class="<%= people_form_class(@person) %>" id="<%= people_form_id(@person) %>" action="<%= people_form_action(@person) %>" method="post">
    
       
    <input type="hidden" name="_method" value="<%= people_form_method(@person) %>" />

    
    <div class="form-group row">         
        <label for="first_name" class="col-sm-2 form-control-label">First Name:</label>
                <div class="col-sm-10">
                    <input type="text" name="first_name" class="form-control" value="<%= @person.first_name %>"/></div>
      </div>
      
    <div class="form-group row">  
        <label for="last_name"class="col-sm-2 form-control-label">Last Name:</label>
          <div class="col-sm-10">
              <input type="text" name="last_name" class="form-control" value="<%= @person.last_name %>" />
      </div>
    </div>
        
    <div class="form-group row">      
        <label for="birthdate" class="col-sm-2 form-control-label">
            Birthdate:</label>    
          <div class="col-sm-10">
              <input name="birthdate" type="date" class="form-control" value="<%= @person.birthdate %>" /> 
      </div>
        </div>
        
    <div class="form-group row">  
   <div class="col-sm-offset-2 col-sm-10"> <button type="submit" class="btn btn-default">Submit</button>
    </div>
        </div>

    </form>
